  },
  "devDependencies": {
    "@next/bundle-analyzer": "^11.0.1",
    "@openzeppelin/contracts": "^4.2.0",
    "@types/node": "^16.4.10",
    "@types/react": "^17.0.15",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{md,mdx,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "next-unused": {
    "alias": {
      "@atoms/*": [
        "src/atoms/*"
      ],
      "@klaytn/*": [
        "src/klaytn/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@libs/*": [
        "src/libs/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@contants/*": [
        "src/contants/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@api/*": [
        "src/api/*"
      ]
    },
    "debug": true,
    "include": [
      "src/atoms",
      "src/klaytn",
      "src/assets",
      "src/libs",
      "src/utils",
      "src/config",
      "src/contants",
      "src/components",
      "src/hooks",
      "src/api",
      "src/pages"
    ],
    "exclude": [],
    "entrypoints": [
      "src/pages"
    ]
  }
}
