    "@emotion/css": "^11.1.3",
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "autoprefixer": "^10.3.1",
    "caver-js": "^1.6.3",
    "cross-env": "^7.0.3",
    "dotenv-load": "^2.0.0",
    "framer-motion": "^4",
    "ky": "^0.28.5",
